            <Label fx:id="labelinfo" text="Number of areas (connected components) : ">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </VBox.margin>
            </Label>
            <TableView fx:id="tableView" maxHeight="300.0" prefHeight="300.0" tableMenuButtonVisible="true">
              <columns>
                  <TableColumn fx:id="numareaColumn" editable="false" prefWidth="45.0" resizable="false" sortable="false" text="Area" />
                <TableColumn fx:id="locationColumn" editable="false" prefWidth="155.0" sortable="false" text="Location" />
                <TableColumn fx:id="streetColumn" editable="false" prefWidth="153.0" sortable="false" text="Street" />
                  <TableColumn fx:id="cityColumn" editable="false" prefWidth="64.0" sortable="false" text="City" />
                  <TableColumn fx:id="SSIDColumn" editable="false" minWidth="0.0" prefWidth="85.0" sortable="false" text="SSID" />
                  <TableColumn fx:id="infoColumn" editable="false" minWidth="0.0" prefWidth="87.0" sortable="false" text="Info" />
              </columns>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TableView>
            <Label fx:id="labelinfo2" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Total working time: ">
               <VBox.margin>
                  <Insets bottom="5.0" left="8.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </Label>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBackScene" text="Change parameters" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </center>
